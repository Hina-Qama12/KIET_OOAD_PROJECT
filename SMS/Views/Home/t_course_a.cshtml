@model SMS.Models.teacher

@{
    ViewBag.Title = "t_course_a";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<h2>Teacher Course Attendance</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    



   
</div>

}

<table class="table">
    <tr>
        <th>
            Teacher
        </th>
        <th>
            Course_ID
        </th>
        <th>
            Course Name
        </th>
    </tr>

    @foreach (var item in ViewData["list"] as List<SMS.Models.teacher>)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.teacher_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course.C_id)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.course.couse)
            </td>


        </tr>
    }

</table>


<div>
    @Html.ActionLink("Back to Main Page", "Index3")
</div>

