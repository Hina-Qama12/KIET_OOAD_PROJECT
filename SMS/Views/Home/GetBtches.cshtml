@model IEnumerable<SMS.Models.batch>

@{
    ViewBag.Title = "GetBtches";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Batches List</h2>

<p>
    @Html.ActionLink("Create New", "Batch_Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.batch1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.batch1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Html.ActionLink("Edit", "Batch_Edit", new { id=item.B_id }) |
            @Html.ActionLink("Details", "Batch_Details", new { id=item.B_id }) |
            @Html.ActionLink("Delete", "Batch_Delete", new { id=item.B_id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to Main Page", "Index2")
</div>
